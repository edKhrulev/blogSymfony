<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link  href="/styles/bootstrap.min.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-dark bg-dark navbar-expand">
        <ul class="ml-auto navbar-nav">
            {% if app.user %}
                <li class="nav-item"><a class="nav-link" href="{{ path('user_logout') }}">Logout</a></li>
            {% else %}
                <li class="nav-item"><a class="nav-link" href="{{ path('user_login') }}">Login</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('user_new') }}">Registration</a></li>
            {% endif %}


        </ul>
    </nav>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
